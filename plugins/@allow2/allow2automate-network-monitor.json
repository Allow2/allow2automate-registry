{
  "$schema": "../../schema.json",
  "id": "allow2automate-network-monitor",
  "name": "@allow2/allow2automate-network-monitor",
  "shortName": "network-monitor",
  "namespace": "@allow2",
  "version": "1.0.0",
  "description": "Network monitoring plugin for Allow2Automate with device detection and bandwidth tracking",
  "publisher": "allow2",
  "author": "Allow2",
  "license": "MIT",
  "category": "utilities",
  "keywords": [
    "allow2automate",
    "allow2",
    "network",
    "monitoring",
    "bandwidth",
    "devices"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Allow2/allow2automate-network-monitor"
  },
  "bugs": {
    "url": "https://github.com/Allow2/allow2automate-network-monitor/issues"
  },
  "homepage": "https://github.com/Allow2/allow2automate-network-monitor#readme",
  "main": "./dist/index.js",
  "releases": {
    "latest": "1.0.0"
  },
  "compatibility": {
    "automate": ">=2.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.9",
    "network": "^0.6.0"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0",
    "react-dom": "^16.0.0 || ^17.0.0",
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0"
  },
  "installation": {
    "type": "git",
    "url": "git+https://github.com/Allow2/allow2automate-network-monitor.git",
    "install_url": "git+https://github.com/Allow2/allow2automate-network-monitor.git#v1.0.0"
  },
  "metadata": {
    "hasGUI": true,
    "hasConfig": true,
    "requiresNetwork": true,
    "requiresPermissions": true,
    "platform": ["win32", "darwin", "linux"],
    "compliance": {
      "compliant": true,
      "validationErrors": [],
      "validationWarnings": [],
      "lastChecked": "2025-12-25T00:00:00Z"
    }
  },
  "allow2automate": {
    "plugin": true,
    "pluginId": "allow2automate-network-monitor",
    "displayName": "Network Monitor",
    "category": "Utilities",
    "permissions": [
      "network",
      "configuration",
      "system"
    ],
    "minAppVersion": "2.0.0",
    "api": {
      "actions": [
        {
          "id": "scanNetwork",
          "name": "Scan Network",
          "description": "Scan local network for connected devices"
        },
        {
          "id": "getDeviceList",
          "name": "Get Device List",
          "description": "Retrieve list of detected network devices"
        },
        {
          "id": "getBandwidthStats",
          "name": "Get Bandwidth Stats",
          "description": "Get bandwidth usage statistics"
        },
        {
          "id": "blockDevice",
          "name": "Block Device",
          "description": "Block a device from network access"
        }
      ],
      "triggers": [
        {
          "id": "deviceConnected",
          "name": "Device Connected",
          "description": "Triggered when a new device connects to the network"
        },
        {
          "id": "deviceDisconnected",
          "name": "Device Disconnected",
          "description": "Triggered when a device disconnects from the network"
        },
        {
          "id": "bandwidthThreshold",
          "name": "Bandwidth Threshold Exceeded",
          "description": "Triggered when bandwidth usage exceeds configured threshold"
        }
      ]
    }
  }
}
